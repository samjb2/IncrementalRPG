                                    .label.dimgray +1 people per tent.
                            .btn-group
                                button#upgradeBunkBeds.btn-warning.upgradeBunkBeds.justify(type="button" data-toggle="tooltip" data-container="body" data-placement="left" title="100 Wood 100 Stone 100 Food") Bunk Beds
                                    br
                                    .label.dimgray +1 people per house.
                            .btn-group
                                button#upgradeSharpenAxes.upgradeSharpenAxes.btn-warning.justify(type="button" data-toggle="tooltip" data-container="body" data-placement="left" title="50 Wood  100 Stone  50 Food") Sharpen Axes
                                    br
                                    .label.dimgray Double loggers gathering.
                    .col-xs-6
                        .btn-group.btn-group-vertical
                            .btn-group
                                button#upgradeSharpenPicks.upgradeSharpenPicks.btn-warning.justify(type="button" data-toggle="tooltip" data-container="body" data-placement="left" title="50 Wood  100 Stone  50 Food") Sharpen Picks
                                    br
                                    .label.dimgray Double quarriers gathering.
                            .btn-group
                                button#upgradeSharpenArrows.upgradeSharpenArrows.btn-warning.justify(type="button" data-toggle="tooltip" data-container="body" data-placement="left" title="50 Wood  100 Stone  50 Food") Sharpen Arrows
                                    br
                                    .label.dimgray Double hunters gathering.
                            .btn-group
                                button#upgradeMatesRatesWood.upgradeMatesRatesWood.btn-warning.justify(type="button" data-toggle="tooltip" data-container="body" data-placement="left" title="150 Stone 50 Food 100 Gold") Mates Rates - Wood
                                    br
                                    .label.dimgray Buildings cost less wood.
                            .btn-group
                                button#upgradeMatesRatesStone.upgradeMatesRatesStone.btn-warning.justify(type="button" data-toggle="tooltip" data-container="body" data-placement="left" title="150 Wood 50 Food 100 gold") Mates Rates - Stone
                                    br
                                    .label.dimgray Buildings cost less stone.
            .row
                .col-md-6
                    .well
