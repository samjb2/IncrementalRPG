                                .btn.label.label-default| -
                                    span#millCostWood 100
                                    | Wood | -
                                    span#millCostStone 100
                                    | Stone
                                    span#millCostIron 0
                                    | Iron
                                    .btn-group
                                .btn.label.label-default
                                    | + 100
                                    | Wood Storage
                            .btn-group
                                button.btn.btn-default.disabled(type='button')
                                    span#millAmount 0
                                    | Mills
                        .btn-group.btn-group-sm.btn-group-justified
                            .btn-group
                                button#buildQuarry.btn.btn-danger.btn-block(type='button') Build Quarry
                            .btn-group
                                .btn.label.label-default| -
                                    span#quarryCostWood 100
                                    | Wood | -
                                    span#quarryCostStone 100
                                    | Stone
                                    span#quarryCostIron 0
                                    | Iron
                                    .btn-group
                                .btn.label.label-default
                                    | + 100
                                    | Stone Capacity
                            .btn-group
                                button.btn.btn-default.disabled(type='button')
                                    span#quarryAmount 0
                                    | Quarrys
                        .btn-group.btn-group-sm.btn-group-justified
                            .btn-group
                                button#buildsilo.btn.btn-danger.btn-block(type='button') Build Silo
                            .btn-group
                                .btn.label.label-default| -
                                    span#siloCostWood 100
                                    | Wood | -
                                    span#siloCostStone 100
                                    | Stone
                                    .btn-group
                                .btn.label.label-default
                                    | + 100
                                    | Food Capacity
                            .btn-group
                                button.btn.btn-default.disabled(type='button')
                                    span#siloAmount 0
                                    | Silos
                        .btn-group.btn-group-sm.btn-group-justified
                            .btn-group
                                button#buildMine.btn.btn-danger.btn-block(type='button') Build Mine
                            .btn-group
                                .btn.label.label-default| -
                                    span#mineCostWood 100
                                    | Wood | -
                                    span#mineCostStone 100
                                    | Stone
                                    span#mineCostIron 0
                                    | Iron
                                    .btn-group
                                .btn.label.label-default
                                    | + 100
                                    | Ore Capacity
                            .btn-group
                                button.btn.btn-default.disabled(type='button')
                                    span#mineAmount 0
                                    | Mines
                .col-xs-4.col-xs-offset-4
                    h5.text-center Upgrades
                    .col-xs-6
                        .btn-group.btn-group-vertical
                            .btn-group
                                button#upgradeSelf.upgradeTwoFingers.btn-warning.justify(type="button" data-toggle="tooltip" data-container="body" data-placement="left" title="100 Wood  100 Stone  100 Food")
                                    span#upgradeSelfTitle Personal Ability
                                    br
                                    .label.dimgray
                                        span#upgradeSelfTotal 2
                                        span  resources per click.
                            //.btn-group
                                button.upgradeFiveFingers.hidden
                                    #upgradeFiveFingers.btn.btn-warning Five Fingers
                                        br
                                        span.dimgray 5 resources per click.
                                        br
                                        span 450 Wood   450 Stone   120 Food
                            .btn-group
                                button#upgradeDoubleSleepingBags.btn-warning.upgradeDoubleSleepingBags.justify(type="button" data-toggle="tooltip" data-container="body" data-placement="left" title="100 Wood  100 Stone  100 Food") Double Sleeping Bags
